{
    "manifest_version": 3,
    "name": "ChatGPT Prompt Counter",
    "version": "1.0",
    "description": "ChatGPTにプロンプトが送信された回数をカウントします。",
    "permissions": [
      "storage",
      "activeTab",
      "scripting"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_title": "ChatGPT Prompt Counter"
    },
    "content_scripts": [
        {
            "matches": ["*://chatgpt.com/*"],
            "js": ["content.js"]
        }
    ]
  }
  